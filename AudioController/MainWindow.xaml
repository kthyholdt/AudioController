<Window x:Class="AudioController.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AudioController"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Slider HorizontalAlignment="Center" Grid.Column="0" Orientation="Vertical" Value="{Binding MainVolume}" Minimum="0" Maximum="1"/>
        <Slider HorizontalAlignment="Center" Grid.Column="1" Orientation="Vertical" Value="{Binding MediaVolume}" Minimum="0" Maximum="1"/>
        <Slider HorizontalAlignment="Center" Grid.Column="2" Orientation="Vertical" Value="{Binding VoiceVolume}" Minimum="0" Maximum="1"/>
        <Slider HorizontalAlignment="Center" Grid.Column="3" Orientation="Vertical" Value="{Binding GamesVolume}" Minimum="0" Maximum="1"/>
    </Grid>
</Window>
